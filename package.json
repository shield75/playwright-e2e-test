{
  "name": "playwright-e2e-test",
  "version": "1.0.0",
  "description": "Playwright E2E Testes with AI Capabilities including MCP",
  "main": "index.js",
  "scripts": {
    "demo-api": "npx playwright test --config=config/test.playwright.config.ts tests/api/user.api.spec.ts --workers=1",
    "cura-e2e": "npx playwright test --config=config/test.playwright.config.ts tests/e2e/cura.healthcare.spec.ts --headed --workers=1",
    "demo-logger": "npx playwright test --config=config/test.playwright.config.ts  tests/functional/login.spec.ts --headed --workers=1",
    "demo-cookies": "npx playwright test tests/functional/swag-labs/cookies.spec.ts --headed --workers=1",
    "param-data": "npx playwright test tests/functional/parameterization.make.appointment.spec.ts --headed",
    "demo-hooks": "npx playwright test tests/demo/hooks.demo.spec.ts --headed --workers=1",
    "smoke-test": "npx playwright test --grep @smoke --headed",
    "allure-report": "allure generate allure-results --clean -o allure-report && cp -r allure-report/history allure-results/history",
    "checkout-flow": "npx playwright test tests/functional/swag-labs/checkout.spec.ts --headed",
    "demo": "npx playwright test tests/demo/mytest.spec.ts --headed",
    "demo-firefox": "npx playwright test tests/demo/mytest.spec.ts --project=firefox --headed",
    "login-functionality": "npx playwright test tests/functional/login.spec.ts --headed",
    "make-appointment-functionality": "npx playwright test tests/functional/make.appointment.spec.ts --headed",
    "sorting-functionality": "npx playwright test tests/functional/swag-labs/sorting.functionality.spec.ts --headed"
  },
  "keywords": [
    "playwright",
    "playwright-e2e-tests",
    "playwright-mcp"
  ],
  "author": "Anisur Rahman Tonu",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.0",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.2",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3"
  }
}
